//qualif Size2d(v:ptr, ~a:int, ~b:int): v = (BLOCK_BEGIN([v]) + (~a * ~b))

qualif Size2d(v:ptr, @ghost0:ptr, @i:int, @dim:int): v = (@ghost0 + (@i * @dim))
qualif Size2d(v:ptr, @i:int, @dim:int): v = (BLOCK_BEGIN([v]) + (@i * @dim))

qualif End2d(v:ptr, @dim:int): (v + @dim) <= BLOCK_END([v])
qualif Beg2d(v:ptr, @dim:int): BLOCK_BEGIN([v]) <= v
